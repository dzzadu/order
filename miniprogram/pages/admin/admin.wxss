.mian{
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.title{
  width: 100vw;
  height: 80rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
.item{
  padding: 20rpx 40rpx;
  background-color: #fff;
}
.in{
  border-bottom: 4rpx solid #ab956d;
  color: #ab956d;
}
swiper{
  flex: 1;
}
/* 菜单管理 */
.content{
  margin-top: 5rpx;
  height: 100%;
}
.categroy-left{
  float: left;
  width: 150rpx;
  height: 100%;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
}
.categroy-left .cate-list{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
}
.categroy-left .cate-list.on{
  color: #AB956D;
  border-color: #AB956D;
}
.categroy-right{
  float: right;
  width: 600rpx;
  height: 100%;
  overflow: scroll;
}
.cate-box{
  background-color: #fff;
}
.product{
  overflow: scroll;
  display: flex;
  flex-direction: column;
}
.product-list{
  border-bottom: 1rpx solid #ab956d;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding:20rpx 20rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.product-list_left{
  display: flex;
  align-items: center;
}
.product-list_right>image{
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
  margin: 10rpx;
}
.product-list_left image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}
/* 上传 */
form{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
picker{
  width: 100%;
}
.picker,form .item{
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgb(175, 175, 175);
}
.item{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}
label{
  width: 200rpx;
  margin-right: 20rpx;
}
.item input{
  flex: 1;
}
.detail{
  padding: 20rpx;
  border-bottom: 1rpx solid rgb(175, 175, 175);
}
.detail textarea{
  padding-top: 20rpx;
  height: 160rpx;
}
.list{
  width: 100%;
}
.upImg image{
  display: block;
  margin: 20rpx auto;
  width: 300rpx;
  height: 300rpx;
}
.btn{
  margin-top: 30rpx;
  color: #fff;
  background-color: rgb(102, 77, 44);
}
/* 查看订单 */
.orders-box{
  color: #838383;
  font-size: 28rpx;
  width: 100%;
}
.orders-list{
  padding-left: 30rpx;
  border-bottom: 20rpx solid #ededed;
}
.orders-list:last-child{
  border-bottom: 0;
}
.orders-number{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  justify-content: space-between;
}
.orders-detail{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e9e9e9;
}
.orders-detail image{
  margin: 20rpx;
  width: 150rpx;
  height: 150rpx;
}
.orders-detail .detail2{
  line-height: 60rpx;
  flex: 1;
}
.orders-detail .orders-status{
  margin-right: 30rpx;
  color: #b42f2d;
}
.orders-footer{
  height: 60rpx;
  line-height: 60rpx;
  color: #2f2f2f;
  padding:15rpx 30rpx 15rpx 0;
}
.orders-footer .orders-btn{
  float: right;
  font-size: 35rpx;
  width: 170rpx;
  height: 60rpx;
  line-height:60rpx;
  border-radius: 6rpx;
  background: #b42f2d;
  color: #fff;
}