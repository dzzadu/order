/* pages/component/edit/edit.wxss */
form{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
picker{
  width: 100%;
}
.picker,.item{
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgb(175, 175, 175);
}
.item{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}
label{
  width: 200rpx;
  margin-right: 20rpx;
}
.item input{
  flex: 1;
}
.detail{
  padding: 20rpx;
  border-bottom: 1rpx solid rgb(175, 175, 175);
}
.detail textarea{
  padding-top: 20rpx;
  height: 160rpx;
}
.list{
  width: 100%;
}
.upImg image{
  display: block;
  margin: 20rpx auto;
  width: 300rpx;
  height: 300rpx;
}
button{
  margin-top: 30rpx;
  color: #fff;
  background-color: rgb(102, 77, 44);
}